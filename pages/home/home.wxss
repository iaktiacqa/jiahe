/* pages/home/home.wxss */
.y_and_m_wrapper {
  display: flex;
  width: 100%;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background: rgb(203, 13,57);
  height: 80rpx;

}
.pre_month {
  font-size: 28rpx;
  color: #fff;
  border: 1px #fff solid;
  border-radius: 8rpx;
  padding: 4rpx 10rpx;  
}
.y_and_m {
  font-size: 36rpx;
  color: #fff;
  margin: 0 40rpx;
}
.next_month {
  font-size: 28rpx;
  color: #fff;
  border: 1px #fff solid;
  border-radius: 8rpx;
  padding: 4rpx 10rpx; 
}
.now {
  margin-left: 50rpx;
  font-size: 28rpx;
  color: #fff;
  border: 1px #fff solid;
  border-radius: 8rpx;
  padding: 4rpx 10rpx; 
}
.week_wrapper {
  height: 100rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  padding: 0rpx;
  justify-content: space-between;
  align-items: center;
}
.week {
  flex:1;
  display: flex;
  justify-content: center;
  font-size:28rpx;
  color: rgb(192,194,195)
}

.line_wrapper {
  display: flex;
  width: 100%;
  padding: 0rpx;
  justify-content: space-between;
  flex-direction: row;
}
.date_wrapper {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding-bottom: 28rpx;
  padding-top: 10rpx;
}
.now_date {
  background: rgb(203, 13,57);
  border-radius: 50%;
  width: 90rpx;
  height: 90rpx;
  font-size: 32rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.date_yangli {
  font-size: 32rpx;
  width: 90rpx;
  height: 90rpx;
}