.task_item_wrapper {
  display: flex;
  flex-direction: column;
  border-bottom: #ddd 1px solid;
}

.start_task {
  position: absolute;
  right: 0;
  margin-right: 30rpx;
  background: #1aad19;
  font-size: 40rpx;
  color: #fff;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
  margin-top: 40rpx;
}

.gender_1, .gender_2, .gender_3 {
  position: absolute;
  font-size: 24rpx;
  color: #fff;
  padding: 2rpx 5rpx;
}

.gender_1 {
  background: #cb0d39;
}

.gender_2 {
  background: #1aad19;
}

.gender_3 {
  background: #ff9501;
}

.name_desc_wrapper {
  display: flex;
  flex-direction: row;
  padding: 0 40rpx;
  align-items: center;
  margin-top: 40rpx;
  margin-bottom: 10rpx;
}

.task_desc {
  flex: 1;
  font-size: 30rpx;
  margin-left: 20rpx;
  color: #666;
}

.time_and_finished_wrapper {
  padding: 0 40rpx;
  font-size: 34rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.finished_time {
  margin-left: 20rpx;
}
